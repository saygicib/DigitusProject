@model RegisterModel
@{
    ViewData["Title"] = "Profile";
}

<br />
<br />
<br />
<h1>Profile</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="text-danger">@ViewBag.ErrorMesssage</div>
        }
        <form asp-controller="Account" asp-action="Register" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label">Name</label>
                <div class="col-md-10">
                    <input asp-for="Name" value="@Model.Name" class="form-control" disabled />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Surname" class="col-md-2 col-form-label">Surname</label>
                <div class="col-md-10">
                    <input asp-for="Surname" value="@Model.Surname" class="form-control" disabled />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-md-2 col-form-label">Email</label>
                <div class="col-md-10">
                    <input asp-for="Email" value="@Model.Email" class="form-control" disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>

